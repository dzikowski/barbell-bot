{
  "name": "barbell-bot",
  "version": "1.0.0",
  "description": "Automated trading bot for cryptocurrency",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "find src -name '*.spec.ts' -exec tsx --test {} +",
    "test:watch": "find src -name '*.spec.ts' -exec tsx --test --watch {} +",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run format && eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev": "PRIVATE_KEY_PATH=test-private-key DATABASE_URL=postgresql://postgres:postgres@localhost:5438/barbell_bot ts-node src/main.ts",
    "db:up": "docker run --name barbell-postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=barbell_bot -p 5438:5432 -d postgres:17 && sleep 3 && DATABASE_URL=postgresql://postgres:postgres@localhost:5438/barbell_bot prisma db push",
    "db:down": "docker stop barbell-postgres && docker rm barbell-postgres",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push"
  },
  "keywords": [
    "trading",
    "bot",
    "cryptocurrency",
    "automation"
  ],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "@gala-chain/api": "2.4.3",
    "@prisma/client": "^5.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  }
}
